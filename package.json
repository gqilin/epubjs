{
  "name": "elegant-epub",
  "version": "0.3.93",
  "description": "Parse and Render Epubs",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "repository": "https://github.com/futurepress/epub.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "karma start --single-run --browsers ChromeHeadlessNoSandbox",
    "docs": "documentation build src/epub.js -f html -o documentation/html/",
    "docs:html": "documentation build src/epub.js -f html -o documentation/html/",
    "docs:md": "documentation build src/epub.js -f md -o documentation/md/API.md",
    "lint": "eslint -c .eslintrc.js src; exit 0",
    "start": "webpack serve --open",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "minify": "cross-env NODE_ENV=production MINIMIZE=true webpack --progress",
    "legacy": "cross-env NODE_ENV=production LEGACY=true webpack --progress",
    "productionLegacy": "cross-env NODE_ENV=production MINIMIZE=true LEGACY=true webpack --progress",
    "compile": "babel -d lib/ src/",
    "watch": "babel --watch -d lib/ src/",
    "prepare": "npm run compile && npm run build && npm run minify && npm run legacy && npm run productionLegacy"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "fchasen@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-export-default-from": "^7.18.9",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/preset-env": "^7.23.0",
    "@babel/runtime": "^7.23.0",
    "assert": "^2.1.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "documentation": "^14.0.3",
    "eslint": "^8.54.0",
    "jsdoc": "^4.0.2",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.2.0",
    "mocha-loader": "^5.0.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "raw-loader": "^4.0.2",
    "stream-browserify": "^3.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "tsd-jsdoc": "^2.5.0",
    "url": "^0.11.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^7.0.0",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@types/localforage": "0.0.34",
    "@xmldom/xmldom": "^0.7.5",
    "core-js": "^3.18.3",
    "event-emitter": "^0.3.5",
    "jszip": "^3.7.1",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "marks-pane": "^1.0.9",
    "path-webpack": "0.0.3"
  }
}
